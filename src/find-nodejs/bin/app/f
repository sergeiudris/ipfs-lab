#!/bin/bash

shadow(){
    ./node_modules/.bin/shadow-cljs "$@"
}

dev(){
  npm i
  shadow -A:shadow:core:ui:app watch :ui :app
}

main(){
  ./node_modules/.bin/electron --no-sandbox resources/out/main.js
}

server(){
    shadow -A:shadow:core:ui:app server
    # yarn server
}

compile(){
    npm i
    shadow -A:shadow:core:ui:app compile :ui :app
}

release(){
    npm i
    shadow -A:shadow:core:ui:app release :ui :app
}

cljs_compile(){
    clj -A:dev -m cljs.main -co cljs-build.edn -c
    #  clj -A:dev -m cljs.main -co cljs-build.edn -v -c # -r
}

"$@"